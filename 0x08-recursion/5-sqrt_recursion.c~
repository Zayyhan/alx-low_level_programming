#include "main.h"

/**
* _sqrt - finds the square root of two number
*
* @x: the number
* @y: number to test square root of
* Return: square root
*/

int _sqrt(int x, int y)
{
if (y * y > a)
return (-1);

else if (y * y == x)
return (y)

else
return (_sqrt(x, y + 1));
return (1);
}

/**
* _sqrt_recursion - return the natural square root of a number
*
* @n: number to return the square root of
* Return: square root of @n
*/

int _sqrt_recursion(int n)
{
if (n == 0)
return (0);

return (_sqrt(n, 1));
}
